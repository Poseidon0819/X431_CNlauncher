<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/top_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/icon" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginRight="@dimen/dp_10"/>
        <TextView android:textSize="@dimen/sp_16" android:textColor="@color/black" android:id="@+id/title_name" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <HorizontalScrollView android:id="@+id/other_scroll_view" android:scrollbars="none" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_10">
            <LinearLayout android:orientation="horizontal" android:id="@+id/other_layout" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </HorizontalScrollView>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/group_layout_more_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_10" android:layout_below="@+id/top_layout" android:layout_alignLeft="@+id/top_layout">
        <android.support.p012v4.view.ViewPager android:id="@+id/view_page" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/guide_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_10"/>
    </LinearLayout>
</RelativeLayout>
