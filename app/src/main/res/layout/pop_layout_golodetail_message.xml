<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/light_gray" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="@dimen/golo_detail_pop_textsize" android:textColor="@color/black" android:gravity="center" android:id="@+id/tv_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/user_detail" android:layout_alignParentTop="true"/>
    <RelativeLayout android:orientation="horizontal" android:background="@drawable/bg_detail_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/tv_title">
        <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
            <HorizontalScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:id="@+id/detail_usericon" android:layout_width="@dimen/client_user_image" android:layout_height="@dimen/client_user_image" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:src="@drawable/ic_launcher" android:contentDescription="@null"/>
                    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_toRightOf="@+id/detail_usericon">
                        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                            <TextView android:textSize="@dimen/golo_detail_pop_textsize" android:textColor="@color/black" android:id="@+id/title_username" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/register_hint_username"/>
                            <TextView android:textSize="@dimen/golo_detail_pop_textsize" android:textColor="@color/black" android:id="@+id/detail_username" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:maxWidth="@dimen/golo_item_sigature_len" android:singleLine="true"/>
                            <TextView android:textSize="@dimen/golo_detail_pop_textsize" android:textColor="@color/black" android:id="@+id/title_nickname" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="5dp" android:text="@string/detail_golo_nikename"/>
                            <TextView android:textSize="@dimen/golo_detail_pop_textsize" android:textColor="@color/black" android:id="@+id/detail_nickname" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:maxWidth="@dimen/golo_item_sigature_len" android:singleLine="true"/>
                            <TextView android:textSize="@dimen/golo_detail_pop_textsize" android:textColor="@color/black" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="5dp" android:text="@string/remote_nick_name"/>
                            <TextView android:textSize="@dimen/golo_detail_pop_textsize" android:textColor="@color/black" android:id="@+id/detail_notename" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:maxWidth="@dimen/golo_item_sigature_len" android:singleLine="true"/>
                        </LinearLayout>
                        <TextView android:background="#e0e0e0" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="5dp"/>
                        <LinearLayout android:id="@+id/linear_signature" android:background="@drawable/bg_detail_signature" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:minHeight="32dp">
                            <TextView android:textSize="@dimen/golo_detail_pop_textsize" android:textColor="@color/black" android:gravity="center" android:id="@+id/detail_signature" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="match_parent"/>
                        </LinearLayout>
                        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
                            <TextView android:textSize="@dimen/golo_detail_pop_textsize" android:textColor="@color/black" android:id="@+id/title_carname" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/my_customer_car_type"/>
                            <TextView android:textSize="@dimen/golo_detail_pop_textsize" android:textColor="@color/black" android:id="@+id/detail_carname" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp"/>
                        </LinearLayout>
                        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
                            <TextView android:textSize="@dimen/golo_detail_pop_textsize" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/my_customer_car_year"/>
                            <TextView android:textSize="@dimen/golo_detail_pop_textsize" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp"/>
                        </LinearLayout>
                        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
                            <TextView android:textSize="@dimen/golo_detail_pop_textsize" android:textColor="@color/black" android:id="@+id/title_sex" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/data_sex"/>
                            <TextView android:textSize="@dimen/golo_detail_pop_textsize" android:textColor="@color/black" android:id="@+id/detail_sex" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp"/>
                        </LinearLayout>
                        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
                            <TextView android:textSize="@dimen/golo_detail_pop_textsize" android:textColor="@color/black" android:id="@+id/title_mobile" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/print_phonenumber_txt"/>
                            <TextView android:textSize="@dimen/golo_detail_pop_textsize" android:textColor="@color/black" android:id="@+id/detail_mobile" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp"/>
                        </LinearLayout>
                        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
                            <TextView android:textSize="@dimen/golo_detail_pop_textsize" android:textColor="@color/black" android:id="@+id/title_regional" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/mine_tv_areas"/>
                            <TextView android:textSize="@dimen/golo_detail_pop_textsize" android:textColor="@color/black" android:id="@+id/detail_regional" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp"/>
                        </LinearLayout>
                        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
                            <TextView android:textSize="@dimen/golo_detail_pop_textsize" android:textColor="@color/black" android:id="@+id/title_email" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/reset_password_hint_email"/>
                            <TextView android:textSize="@dimen/golo_detail_pop_textsize" android:textColor="@color/black" android:id="@+id/detail_email" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </HorizontalScrollView>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
