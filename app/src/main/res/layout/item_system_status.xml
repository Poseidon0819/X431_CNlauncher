<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2">
        <TextView android:textSize="@dimen/textsize_large_S" android:textColor="@color/black" android:layout_gravity="center_vertical" android:id="@+id/tv_systemname" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="4">
        <TextView android:textSize="@dimen/textsize_large_S" android:id="@+id/tv_codenumber" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:singleLine="true" style="@style/ListViewStyle.Title.TextView"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1.2">
        <TextView android:textSize="@dimen/textsize_large_S" android:textColor="@color/black" android:layout_gravity="center_vertical" android:id="@+id/tv_systemstatus" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/ly_codehelp" android:visibility="gone" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
        <TextView android:textSize="@dimen/textsize_large_S" android:textColor="@color/black" android:layout_gravity="center_vertical" android:id="@+id/tv_codehelp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/rightend" android:visibility="gone" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1.6">
        <TextView android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/btn_diagnose" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/system_enter" style="?attr/commomButtonStyle"/>
    </LinearLayout>
</LinearLayout>
