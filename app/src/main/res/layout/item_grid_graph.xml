<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/cb_select" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
        <TextView android:layout_gravity="center_vertical" android:id="@+id/cb_list_select" android:background="@drawable/select_checkbox_red" android:focusable="false" android:visibility="gone" android:layout_width="@dimen/datastream_select_size" android:layout_height="@dimen/datastream_select_size" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <TextView android:textColor="@color/black" android:ellipsize="end" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_below="@+id/cb_select" android:layout_centerHorizontal="true"/>
    <TextView android:textColor="@color/black" android:id="@+id/tv_currentValue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/tv_name" android:layout_centerHorizontal="true"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/chart" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/tv_currentValue" android:layout_centerHorizontal="true"/>
</RelativeLayout>
