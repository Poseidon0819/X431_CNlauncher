                <TextView android:id="@+id/tv_fluid" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/sight_fluid" android:layout_weight="1" style="@style/TextStyle_sensing_item"/>
                <TextView android:id="@+id/tv_corrosion" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/sight_corrosion" android:layout_weight="1" style="@style/TextStyle_sensing_item"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:layout_width="@dimen/dp_4" android:layout_height="@dimen/dp_14" android:src="@color/red" style="@style/TextStyle_head_report"/>
