<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:background="?attr/left_backgroud" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent">
    <RadioGroup android:orientation="vertical" android:id="@+id/radiogroup_menu" android:layout_width="match_parent" android:layout_height="match_parent">
        <RadioButton android:id="@+id/btn_diagnose" android:text="@string/tab_menu_diagnose" android:drawableLeft="@drawable/select_btn_diagnose" style="@style/slidingmenuButtonStyle"/>
        <RadioButton android:id="@+id/btn_info" android:text="@string/tab_menu_info" android:drawableLeft="@drawable/select_btn_info" style="@style/slidingmenuButtonStyle"/>
        <RadioButton android:id="@+id/btn_upgrade" android:text="@string/tab_menu_upgrade" android:drawableLeft="@drawable/select_btn_upgrade" style="@style/slidingmenuButtonStyle"/>
        <RadioButton android:id="@+id/btn_mall" android:visibility="gone" android:text="@string/mall" android:drawableLeft="@drawable/select_btn_mall" style="@style/slidingmenuButtonStyle"/>
        <FrameLayout android:id="@+id/feedback_container" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/btn_feedback" android:text="@string/setting_onekey_feedback_txt" android:drawableLeft="@drawable/select_btn_feedback" style="@style/slidingmenuButtonStyle"/>
            <TextView android:textSize="18dp" android:textColor="@color/white" android:gravity="center" android:layout_gravity="right" android:id="@+id/tv_tips" android:background="@drawable/reddot" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_marginRight="5dp"/>
        </FrameLayout>
        <RadioButton android:id="@+id/btn_golo" android:text="@string/tab_menu_golo" android:drawableLeft="@drawable/select_btn_golo" style="@style/slidingmenuButtonStyle"/>
        <RadioButton android:id="@+id/btn_tools" android:visibility="gone" android:text="@string/tab_menu_tools" android:drawableLeft="@drawable/select_btn_tools" style="@style/slidingmenuButtonStyle"/>
        <RadioButton android:id="@+id/btn_mine" android:text="@string/tab_menu_mine" android:drawableLeft="@drawable/select_btn_mine" style="@style/slidingmenuButtonStyle"/>
        <RadioButton android:id="@+id/btn_setting" android:text="@string/tab_menu_setting" android:drawableLeft="@drawable/select_btn_setting" style="@style/slidingmenuButtonStyle"/>
    </RadioGroup>
</ScrollView>
