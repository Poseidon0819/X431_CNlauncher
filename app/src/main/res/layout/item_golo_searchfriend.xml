<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/grey_100" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/linear_letter" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/title_letter_padding" android:background="#ededed" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:textSize="@dimen/golo_bind_textsize_title" android:gravity="center_vertical" android:id="@+id/title_letter" android:paddingLeft="@dimen/golobind_left_margin" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/golobind_title_time_minheight"/>
        <TextView android:id="@+id/title_letter_linear" android:background="#ededed" android:layout_width="match_parent" android:layout_height="1dp"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:paddingTop="@dimen/golobind_bottom_margin" android:paddingBottom="@dimen/golobind_top_margin" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/golobind_right_margin" android:layout_marginRight="@dimen/golobind_right_margin" android:baselineAligned="false" android:layout_weight="@dimen/item_list_start_weight_warntip">
        <ImageView android:layout_gravity="center" android:id="@+id/img_face" android:background="@drawable/bg_cir_grey" android:layout_width="@dimen/golobind_icon_size" android:layout_height="@dimen/golobind_icon_size" android:contentDescription="@null"/>
        <RelativeLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_weight="3">
            <TextView android:textSize="@dimen/golo_bind_textsize_title" android:textColor="#212121" android:gravity="center_vertical" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
            <ImageView android:id="@+id/img_sex" android:layout_width="@dimen/sex_icon_size" android:layout_height="@dimen/sex_icon_size" android:layout_marginLeft="@dimen/golobind_content_padding" android:src="@drawable/sex_gril" android:layout_toRightOf="@+id/tv_name"/>
            <TextView android:textSize="@dimen/golo_bind_textsize_content" android:textColor="#9e9e9e" android:ellipsize="end" android:id="@+id/tv_signature" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2" android:layout_below="@+id/tv_name"/>
        </RelativeLayout>
        <FrameLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_alignParentRight="true" android:layout_centerVertical="true">
            <TextView android:gravity="center" android:id="@+id/btn_remote_diag" android:padding="@dimen/golobind_content_padding" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/request_remotediag" style="?attr/commomButtonStyle"/>
            <TextView android:gravity="center" android:id="@+id/tip_readly" android:padding="@dimen/golobind_content_padding" android:layout_width="match_parent" android:layout_height="wrap_content" style="?attr/commomButtonStyle"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
