<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:baselineAligned="false">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/golo_remotehistory_item_minheight" android:layout_weight="@dimen/item_list_start_weight_history">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
            <ImageView android:id="@+id/img_icon" android:padding="5dp" android:layout_width="@dimen/golo_warntipe_icon_size" android:layout_height="@dimen/golo_warntipe_icon_size" android:layout_marginLeft="10dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:contentDescription="@null"/>
            <RelativeLayout android:orientation="vertical" android:id="@+id/linear_car_msg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_toRightOf="@+id/img_icon" android:layout_centerVertical="true">
                <TextView android:textSize="@dimen/golo_warntip_textsize" android:gravity="center" android:id="@+id/tv_car_num" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:singleLine="true" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
                <ImageView android:id="@+id/img_car_logo" android:layout_width="@dimen/golo_tip_car_icon_size" android:layout_height="@dimen/golo_tip_car_icon_size" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:contentDescription="@null"/>
                <TextView android:textSize="@dimen/golo_warntip_textsize" android:textColor="#b9b9b9" android:gravity="center" android:id="@+id/tv_carname" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:singleLine="true" android:layout_below="@+id/tv_car_num" android:layout_alignParentLeft="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1.3">
            <TextView android:textSize="@dimen/golo_warntip_textsize" android:gravity="center" android:id="@+id/tv_report_type_name" android:layout_width="match_parent" android:layout_height="match_parent" android:singleLine="true" android:layout_weight="1"/>
            <TextView android:textSize="@dimen/golo_warntip_textsize" android:gravity="center" android:id="@+id/tv_created" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <TextView android:textSize="@dimen/golo_warntip_textsize" android:gravity="center_vertical" android:id="@+id/tv_description" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginRight="10dp" android:minHeight="@dimen/golo_remotehistory_item_minheight" android:singleLine="true" android:drawableRight="@drawable/right_arrow" android:layout_weight="@dimen/item_list_last_weight_history"/>
</LinearLayout>
