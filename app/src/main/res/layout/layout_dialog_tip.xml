<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="@dimen/textsize_normal_S" android:id="@+id/tv_message" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="64dp"/>
    <RelativeLayout android:orientation="horizontal" android:id="@+id/linear_checkbox" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <CheckBox android:id="@+id/cb_tip" android:background="@drawable/select_checkbox_red" android:layout_width="30dp" android:layout_height="30dp" android:button="@null" android:layout_centerVertical="true"/>
        <TextView android:textSize="@dimen/textsize_normal_S" android:id="@+id/tv_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="@string/show_again" android:layout_toRightOf="@+id/cb_tip" android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
