<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/grey_300" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:orientation="horizontal" android:id="@+id/layout_title" android:paddingTop="@dimen/dp_5" android:paddingBottom="@dimen/dp_5" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/LayoutStyle.detail.item">
        <ImageView android:id="@+id/detail_usericon" android:background="@drawable/bg_cir_grey" android:layout_width="@dimen/golobind_icon_size" android:layout_height="@dimen/golobind_icon_size" android:layout_marginLeft="@dimen/golobind_left_margin" android:src="@drawable/login_default" android:layout_centerVertical="true" android:contentDescription="@null"/>
        <TextView android:textSize="@dimen/golo_detail_pop_textsize" android:textColor="@color/black" android:id="@+id/detail_mainname" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/golobind_content_left_margin" android:singleLine="true"/>
        <ImageView android:id="@+id/img_sex" android:layout_width="@dimen/sex_icon_size" android:layout_height="@dimen/sex_icon_size" android:layout_marginLeft="@dimen/golobind_content_padding" android:layout_toRightOf="@+id/detail_mainname"/>
        <TextView android:textSize="@dimen/golo_bind_textsize_content" android:textColor="@color/grey_500" android:id="@+id/detail_username" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/golobind_content_left_margin" android:layout_below="@+id/detail_mainname"/>
        <TextView android:textSize="@dimen/golo_bind_textsize_content" android:textColor="@color/grey_500" android:id="@+id/detail_nickname" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/golobind_content_left_margin" android:singleLine="true" android:layout_below="@+id/detail_username"/>
    </RelativeLayout>
    <RelativeLayout android:orientation="horizontal" android:id="@+id/layout_signature" android:paddingRight="@dimen/golobind_right_margin" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/layout_title" style="@style/LayoutStyle.detail.item">
        <TextView android:id="@+id/title_signature" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/golobind_left_margin" android:text="@string/golo_detial_title_signature" style="@style/TextViewStyle.golo.detail"/>
        <TextView android:textSize="@dimen/golo_detail_pop_textsize" android:gravity="center" android:id="@+id/detail_signature" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/golobind_content_padding" android:layout_toRightOf="@+id/title_signature" style="@style/TextViewStyle.golo.detail.grey"/>
    </RelativeLayout>
    <RelativeLayout android:orientation="horizontal" android:id="@+id/layout_carinfo" android:paddingRight="@dimen/golobind_right_margin" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/layout_signature" style="@style/LayoutStyle.detail.item">
        <TextView android:id="@+id/title_carname" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/golobind_left_margin" android:text="@string/my_customer_car_type" style="@style/TextViewStyle.golo.detail"/>
        <TextView android:id="@+id/detail_carname" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/golobind_content_padding" android:layout_toRightOf="@+id/title_carname" style="@style/TextViewStyle.golo.detail.grey"/>
    </RelativeLayout>
    <RelativeLayout android:orientation="horizontal" android:id="@+id/layout_detail" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/layout_carinfo" style="@style/LayoutStyle.detail.item">
        <TextView android:id="@+id/title_mobile" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/golobind_left_margin" android:text="@string/print_phonenumber_txt" style="@style/TextViewStyle.golo.detail"/>
        <TextView android:id="@+id/detail_mobile" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/golobind_content_padding" android:layout_toRightOf="@+id/title_mobile" style="@style/TextViewStyle.golo.detail.grey"/>
        <TextView android:id="@+id/title_email" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/golobind_left_margin" android:text="@string/reset_password_hint_email" android:layout_below="@+id/title_mobile" style="@style/TextViewStyle.golo.detail"/>
        <TextView android:id="@+id/detail_email" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/golobind_content_padding" android:layout_toRightOf="@+id/title_email" android:layout_below="@+id/title_mobile" style="@style/TextViewStyle.golo.detail.grey"/>
        <TextView android:id="@+id/title_regional" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/golobind_left_margin" android:text="@string/mine_tv_areas" android:layout_below="@+id/title_email" style="@style/TextViewStyle.golo.detail"/>
        <TextView android:id="@+id/detail_regional" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/golobind_content_padding" android:layout_toRightOf="@+id/title_regional" android:layout_below="@+id/title_email" style="@style/TextViewStyle.golo.detail.grey"/>
    </RelativeLayout>
    <Button android:textSize="@dimen/textsize_normal_S" android:id="@+id/order_you" android:padding="8dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/order_remotediag" android:layout_below="@+id/layout_detail" android:layout_centerHorizontal="true" style="?attr/commomButtonStyle"/>
    <Button android:textSize="@dimen/textsize_normal_S" android:id="@+id/send_msg" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/golo_detial_sendmessage" android:layout_below="@+id/order_you" android:layout_centerHorizontal="true" style="?attr/commomButtonStyle"/>
</RelativeLayout>
