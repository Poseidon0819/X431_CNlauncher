<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:id="@+id/linear_contentPanel" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="0dp" android:minHeight="150dp" android:layout_weight="1">
        <ImageView android:layout_gravity="top" android:id="@+id/linear_contentIconIndicator" android:padding="10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/dialog_icon_indicator_info" android:scaleType="fitXY" android:contentDescription="@null"/>
        <ScrollView android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:id="@+id/dialog_message" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/DialogStyle_Content"/>
        </ScrollView>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/linearlayout_bottom_btn" android:background="#ffededed" android:layout_width="match_parent" android:layout_height="wrap_content" android:height="110dp" android:measureWithLargestChild="true">
        <Button android:textSize="@dimen/textsize_normal_S" android:layout_gravity="start|center_vertical" android:id="@+id/button1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minHeight="48dp" android:maxLines="2" android:layout_weight="1" style="?attr/commomButtonStyle"/>
    </LinearLayout>
</LinearLayout>
