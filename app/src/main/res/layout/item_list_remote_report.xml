<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/tip" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/report_num_tip_textsize" android:id="@+id/tip_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:layout_alignParentRight="true"/>
        <LinearLayout android:background="#ededed" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:gravity="center" android:id="@+id/tv_report_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/datastream_select_item_h" android:minHeight="@dimen/item_select_minheight" android:layout_weight="2" style="@style/MiniInfoItemTextStyle"/>
        <TextView android:gravity="center" android:id="@+id/tv_diagnose_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minHeight="@dimen/item_select_minheight" android:layout_weight="1" style="@style/MiniInfoItemTextStyle"/>
    </LinearLayout>
</LinearLayout>
