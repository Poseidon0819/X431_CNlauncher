<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@drawable/item_background" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="24px" android:textColor="#0f75e8" android:layout_gravity="center" android:id="@+id/SN" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp"/>
        <TextView android:textSize="24px" android:textColor="#313131" android:gravity="center" android:id="@+id/order" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:background="#919191" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="28px" android:textColor="#313131" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="@string/mine_order_title_0"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="24px" android:textColor="#313131" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginBottom="10dp" android:text="@string/mine_pin_card_software_name"/>
            <TextView android:textSize="24px" android:textColor="#0f75e8" android:id="@+id/software_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginBottom="10dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp">
            <LinearLayout android:orientation="horizontal" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="3">
                <TextView android:textSize="24px" android:textColor="#313131" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/mine_pin_card_create_date"/>
                <TextView android:textSize="24px" android:textColor="#0f75e8" android:id="@+id/create_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="3">
                <android.widget.LcButton android:textSize="@dimen/leftmenu_textsize" android:textColor="@color/white" android:ellipsize="end" android:layout_gravity="bottom|right" android:id="@+id/pay" android:padding="3dp" android:focusable="true" android:focusableInTouchMode="false" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/mine_order_pay" android:singleLine="true" android:layout_weight="1" android:marqueeRepeatLimit="marquee_forever" style="?attr/commonButtonLongStyle"/>
                <android.widget.LcButton android:textSize="@dimen/leftmenu_textsize" android:textColor="@color/white" android:ellipsize="end" android:layout_gravity="bottom|right" android:id="@+id/cancel" android:background="@drawable/select_btn_dialog_grey" android:padding="3dp" android:focusable="true" android:focusableInTouchMode="false" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:text="@string/mine_order_cancel_order" android:singleLine="true" android:layout_weight="1" android:marqueeRepeatLimit="marquee_forever"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
