<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:gravity="center" android:background="?attr/title_backgroud" android:layout_width="match_parent" android:layout_height="@dimen/dialog_title_height">
            <TextView android:textSize="@dimen/diag_title_textsize" android:textColor="#ffffff" android:gravity="center" android:id="@+id/tv_title" android:paddingLeft="8dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:background="#ffffff" android:paddingLeft="@dimen/padding_default" android:paddingTop="@dimen/padding_default" android:paddingRight="@dimen/padding_default" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/diag_title_textsize" android:textColor="#000000" android:gravity="center_vertical" android:id="@+id/tv_message" android:paddingLeft="@dimen/padding_default" android:paddingRight="@dimen/padding_default" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="100dp"/>
            <TextView android:textSize="@dimen/diag_title_textsize" android:gravity="center" android:id="@+id/tv_confirm" android:layout_width="match_parent" android:layout_height="@dimen/item_model_height" android:text="@string/confirm" android:layout_weight="1" style="?attr/commomButtonStyle"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
