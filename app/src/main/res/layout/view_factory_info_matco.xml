<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_gravity="left" android:id="@+id/ll_factory_photo" android:padding="@dimen/report_text_padding" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <ImageView android:id="@+id/iv_factory_photo" android:layout_width="180dp" android:layout_height="160dp" android:src="@drawable/u2_normal"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:padding="@dimen/report_text_padding" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2">
        <TextView android:id="@+id/tv_report_shopname" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/ReportContentItemTextStyle"/>
        <TextView android:id="@+id/tv_report_address" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/ReportContentItemTextStyle"/>
        <TextView android:id="@+id/tv_report_zipcode" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/ReportContentItemTextStyle"/>
        <TextView android:id="@+id/tv_report_telephone" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/ReportContentItemTextStyle"/>
        <TextView android:id="@+id/tv_report_fax" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/ReportContentItemTextStyle"/>
        <TextView android:id="@+id/tv_report_email" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/ReportContentItemTextStyle"/>
        <TextView android:id="@+id/tv_report_serialno" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/ReportContentItemTextStyle"/>
        <TextView android:id="@+id/tv_report_date" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/ReportContentItemTextStyle"/>
        <TextView android:id="@+id/tv_report_tester" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/ReportContentItemTextStyle"/>
        <TextView android:id="@+id/tv_report_customer" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/ReportContentItemTextStyle"/>
    </LinearLayout>
</LinearLayout>
