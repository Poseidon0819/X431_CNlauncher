<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="?attr/diagnoseDialogBackground" android:layout_width="match_parent" android:layout_height="wrap_content" android:minWidth="280dp">
    <LinearLayout android:gravity="center_vertical" android:background="?attr/diagnoseDialogTitleBackground" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="50dp">
        <TextView android:gravity="center" android:id="@+id/title" android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="1" style="@style/DialogStyleTitleText"/>
        <ImageView android:id="@+id/btn_print" android:padding="8dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/selector_dialog_btn_print"/>
        <ImageView android:id="@+id/iv_translate" android:padding="8dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/selector_dialog_btn_translate"/>
    </LinearLayout>
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="10">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:orientation="vertical" android:id="@+id/content" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="96dp">
                <TextView android:id="@+id/message" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/DialogStyleMessageText"/>
            </LinearLayout>
            <FrameLayout android:id="@+id/fl_content" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:orientation="horizontal" android:background="?attr/diagnoseDialogButtonBackground" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="1dp" android:layout_marginRight="1dp" android:layout_weight="1">
        <Button android:layout_gravity="center_vertical" android:id="@+id/negativeButton" android:layout_width="0dp" android:layout_height="50dp" android:singleLine="true" android:layout_weight="1" style="@style/DialogStyle_Button_grey"/>
        <Button android:layout_gravity="center_vertical" android:id="@+id/positiveButton" android:layout_width="0dp" android:layout_height="50dp" android:singleLine="true" android:layout_weight="1" style="?attr/diagnoseDialogButtonStyle"/>
        <Button android:layout_gravity="center_vertical" android:id="@+id/neutralButton" android:visibility="gone" android:layout_width="0dp" android:layout_height="50dp" android:singleLine="true" android:layout_weight="1" style="?attr/diagnoseDialogButtonStyle"/>
    </LinearLayout>
</LinearLayout>
