<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@android:color/black" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="2">
        <ImageView android:id="@+id/top" android:background="@drawable/launch_page_top" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <ImageView android:id="@+id/bottom" android:background="@drawable/launch_page_bottom" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
    <FrameLayout android:id="@+id/view_group" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <TextView android:textSize="20dp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/skip_view" android:background="#55ffffff" android:padding="10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="50dp" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
</LinearLayout>
