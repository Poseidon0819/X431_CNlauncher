            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:layout_width="@dimen/dp_4" android:layout_height="@dimen/dp_14" android:src="@color/red" style="@style/TextStyle_head_report"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/report_other" style="@style/TextStyle_report_input"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_10" android:layout_marginRight="@dimen/dp_10">
                <TextView android:id="@+id/tv_no_crank" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/other_no_crank" android:layout_weight="1" style="@style/TextStyle_sensing_item"/>
