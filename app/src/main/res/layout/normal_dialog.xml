<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:layout_gravity="top|right" android:id="@+id/suggested_dialog_img_close" android:background="@drawable/gmap_dialog_close" android:visibility="gone" android:layout_width="@dimen/dp_25" android:layout_height="@dimen/dp_25" android:layout_marginTop="@dimen/dp_5" android:layout_marginRight="@dimen/dp_5"/>
    <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:id="@+id/top" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_10" android:layout_marginTop="@dimen/dp_20" android:layout_marginRight="@dimen/dp_10" android:layout_marginBottom="@dimen/dp_20">
        <TextView android:textSize="@dimen/sp_16" android:textStyle="bold" android:textColor="@color/title_txt_color" android:gravity="center" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dp_10"/>
        <TextView android:textSize="@dimen/sp_14" android:textStyle="normal" android:textColor="@color/title_txt_color" android:gravity="center" android:id="@+id/content" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/lay_checkbox" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_10" android:layout_marginRight="@dimen/dp_10" android:layout_marginBottom="@dimen/dp_20">
        <CheckBox android:id="@+id/checkbox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@drawable/checkbox_select_selector"/>
        <TextView android:textSize="@dimen/sp_14" android:gravity="center" android:id="@+id/check_contact" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_5"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_vertical" android:layout_gravity="bottom" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp">
        <Button android:textSize="@dimen/sp_16" android:textColor="@android:color/white" android:id="@+id/cancle" android:background="@drawable/cance_seletor" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginRight="5dp" android:layout_weight="1"/>
        <Button android:textSize="@dimen/sp_16" android:textColor="@android:color/white" android:id="@+id/ok" android:background="@drawable/btn_positive_bg" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginLeft="5dp" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
