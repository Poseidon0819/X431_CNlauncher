<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:paddingLeft="30dp" android:paddingRight="30dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_set_version" android:background="@drawable/custom_bg" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="-3dp" android:layout_below="@+id/ll_set_version_top" android:layout_centerInParent="true">
        <TextView android:textSize="@dimen/textSize_larger_base" android:textColor="@color/txt_black" android:id="@+id/tv_set_version" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/now_ver_is"/>
        <LinearLayout android:gravity="center" android:padding="15dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:textSize="@dimen/textSize_small_base" android:textColor="#ffffff" android:id="@+id/btn_set_version_ok" android:background="@drawable/space_pay" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="@android:string/ok"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:id="@+id/ll_set_version_top" android:background="@drawable/down_load_title" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/textSize_larger_base" android:textColor="#ffffff" android:id="@+id/tv_set_version_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/version_imformation"/>
    </LinearLayout>
</RelativeLayout>
