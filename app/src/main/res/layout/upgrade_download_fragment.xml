<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="#cac9cf" android:paddingLeft="@dimen/horizontal_margin" android:paddingRight="@dimen/horizontal_margin" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/tv_statistics" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/down_statistics_txt" android:layout_weight="1" style="@style/TextViewStyle.update.title.small"/>
        <TextView android:gravity="center" android:id="@+id/networkspeed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" style="@style/TextViewStyle.update.title.small"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/serialnumber_txt" style="@style/TextViewStyle.update.title.small"/>
        <TextView android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/tv_spinner_serialNo" android:background="@drawable/shape_cir_bg_noborder" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="@string/serialnumber_txt" style="@style/TextViewStyle.update.title.small"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:background="@drawable/table_head_bg" android:paddingLeft="@dimen/horizontal_margin" android:paddingRight="@dimen/horizontal_margin" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/down_name_txt" android:layout_weight="1" style="@style/TextViewStyle.update.itemname"/>
        <TextView android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/down_version_txt" android:layout_weight="1" style="@style/TextViewStyle.update.itemname"/>
        <TextView android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/down_progress_txt" android:layout_weight="1" style="@style/TextViewStyle.update.itemname"/>
        <TextView android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/down_state_txt" android:layout_weight="1" style="@style/TextViewStyle.update.itemname"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:paddingLeft="@dimen/horizontal_margin" android:paddingRight="@dimen/horizontal_margin" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <ListView android:id="@+id/listview" android:fadingEdge="none" android:layout_width="match_parent" android:layout_height="match_parent" android:cacheColorHint="#00000000" android:divider="@color/diver_line" android:dividerHeight="1px" android:fastScrollEnabled="false" android:headerDividersEnabled="false" android:footerDividersEnabled="false" android:smoothScrollbar="true"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:background="@drawable/shape_bottombutton_bg" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.cnlaunch.x431pro.widget.button.IconButton android:id="@+id/radio_home" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" style="@style/IconButton.home"/>
        <com.cnlaunch.x431pro.widget.button.IconButton android:id="@+id/radio_download" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" style="@style/IconButton.Stop"/>
    </LinearLayout>
</LinearLayout>
