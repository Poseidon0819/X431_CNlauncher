<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:materialdesign="http://schemas.android.com/apk/res-auto" android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:background="@drawable/shape_cir_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:gravity="center" android:background="?attr/dialogTitleBackgroud" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/tv_title" android:paddingLeft="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/common_title_tips" android:layout_alignParentLeft="true" style="@style/BaseDialogStyle_Title_Text"/>
        <Button android:gravity="center" android:id="@+id/home_btn" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minHeight="0dp" android:text="@string/btn_home" android:layout_alignBaseline="@+id/tv_title" android:layout_alignParentRight="true" style="?attr/commomButtonStyle"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="100dp">
        <com.cnlaunch.x431pro.widget.progress.ProgressBarCircularIndeterminate android:id="@+id/loading_progress" android:background="?attr/theme_color" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginLeft="20dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
