<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/layout_cyordertype_item" android:background="@drawable/bg_detail_info" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/layout_cyordertype_item_left" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2">
            <CheckBox android:layout_gravity="center_vertical" android:id="@+id/cb_item_select" android:background="@drawable/select_checkbox_red" android:focusable="false" android:visibility="gone" android:layout_width="20dp" android:layout_height="20dp" android:button="@null" android:layout_centerInParent="true"/>
            <TextView android:textSize="20sp" android:id="@+id/cy_order_type_id" android:paddingLeft="@dimen/dp_10" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="dddddd"/>
            <TextView android:textSize="20sp" android:id="@+id/cy_order_type_name" android:paddingLeft="@dimen/dp_10" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="dddddd"/>
            <TextView android:textSize="20sp" android:id="@+id/cy_order_type_price" android:paddingLeft="@dimen/dp_10" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="dddddd"/>
            <TextView android:textSize="20sp" android:id="@+id/cy_order_type_remark" android:paddingLeft="@dimen/dp_10" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="dddddd"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/layout_cyordertype_item_right" android:padding="@dimen/dp_10" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <Button android:id="@+id/cy_order_type_buy" android:background="@drawable/select_btn_red" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="下订单"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
